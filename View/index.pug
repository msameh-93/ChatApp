head
    title Chat Application

body
    h1 Chat Room
    div#msg_container
    form#msg-form
        input(type='text')#msg_field
        button(type='submit') Send
    br
    button#loc Send Location
    script(type='text/html')#msg_template
        div
            p {{timestamp}}: {{msg}}
    script(type='text/html')#loc_template
        div
            p {{timestamp}}: 
                a(href='{{msg}}') Location

    script(src='https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js')
    script(src='/socket.io/socket.io.js')

    script(src='/js/script.js')